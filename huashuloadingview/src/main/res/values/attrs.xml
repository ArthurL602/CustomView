<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LoadingView">
        <!--圆的半径-->
        <attr name="circleRadius" format="dimension"/>
        <!--左圆颜色-->
        <attr name="leftCircleColor" format="color"/>
        <!--中间圆颜色-->
        <attr name="middleCircleColor" format="color"/>
        <!--右圆颜色-->
        <attr name="rightCircleColor" format="color"/>
        <!--移动距离-->
        <attr name="translation" format="dimension"/>
        <attr name="animDuration" format="integer"/>
    </declare-styleable>

    <declare-styleable name="LoadingView2">
        <attr name="leftColor" format="color"/>
        <attr name="middleColor" format="color"/>
        <attr name="rightColor" format="color"/>
        <attr name="translationDistance" format="dimension"/>
        <attr name="circleRadius" format="dimension"/>
    </declare-styleable>
</resources>